
@{
    ViewData["Title"] = $"{@Model.Name}";
}

<h1>Task View</h1>

@model Activity
<h3>@Model.Name</h3>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Category</th>
    </tr>
    <tr>
        <td>@Model.Name</td>
        <td>@Model.Description</td>
        <td>@Model.CategoryID</td>
    </tr>
</table>

<div style="display: block">
    <a href="/Activity/UpdateActivity/@Model.ActivityID">Update Task?</a>    
</div>

<div style="display: block">
    @using (Html.BeginForm("DeleteActivity", "Activity", "Post"))
    {
        <input type="hidden" asp-for="ActivityID" value="@Model.ActivityID" />
        <input type="submit" onclick="return confirm('Delete this task?')" value="Delete this task" />
    }
</div>