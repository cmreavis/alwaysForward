@{
    ViewData["Title"] = $"{@Model.Name}";
}

<h1>Task View</h1>

@model Activity
<h3>@Model.Name</h3>
<div class="buttons-update">
    <a class="buttontext" href="/Activity/UpdateActivity/@Model.ActivityID">Update Task?</a>
</div>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Category</th>
    </tr>
    <tr>
        <td>@Model.Name</td>
        <td>@Model.Description</td>
        <td>
            @switch (Model.CategoryID)
            {
                case 1:
                    Model.CategoryName = "Hygiene";
                    break;
                case 2:
                    Model.CategoryName = "Mental Health/Mindfulness";
                    break;
                case 3:
                    Model.CategoryName = "Physical Health/Fitness";
                    break;
                case 4:
                    Model.CategoryName = "Discipline";
                    break;
                case 5:
                    Model.CategoryName = "Learning/Education";
                    break;
                case 6:
                    Model.CategoryName = "Social";
                    break;
                case 7:
                    Model.CategoryName = "Financial";
                    break;
                case 8:
                    Model.CategoryName = "Spiritual";
                    break;
                default:
                    Model.CategoryName = "Undefined";
                    break;
            }
            @Model.CategoryName
        </td>   
    </tr>
</table>
<div class="buttons-complete" style="display: inline-block">
    @using (Html.BeginForm("CompleteActivity", "Activity", "Post"))
    {
        <input type="hidden" asp-for="ActivityID" value="@Model.ActivityID" />
        <input type="hidden" asp-for="Name" value="@Model.Name" />
        <input type="hidden" asp-for="Description" value="@Model.Description" />
        <input type="hidden" asp-for="CategoryID" value="@Model.CategoryID" />
        <input type="submit" onclick="return confirm('Complete this task and add it to the list of finished activities?')" 
            value="Finished this task?" />
    }
</div>

<div class="buttons-delete" style="display: block">
    @using (Html.BeginForm("DeleteActivity", "Activity", "Post"))
    {
        <input type="hidden" asp-for="ActivityID" value="@Model.ActivityID" />
        <input type="submit" onclick="return confirm('Delete this task?')" value="Delete this task" />
    }
</div>


