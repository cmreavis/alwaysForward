@model IEnumerable<Activity>

<h2>Daily Tasks</h2>

<div style="display: block">
    <a href="/Activity/InsertActivity/">Add a new Task?</a>
</div>

<table class="table">
    <tr>       
        <th>Name</th>
        <th>Description</th>
        <th>Completed?</th>
        <th>Category ID</th>
    </tr>

    @foreach (var activity in @Model)
    {
        <tr>           
            <td><a href=/Activity/ViewActivity/@activity.ActivityID>@activity.Name</a></td>
            <td>@activity.Description</td>
            <td>@activity.isCompleted</td>
            <td>@activity.CategoryID</td>
        </tr>
    }

</table>